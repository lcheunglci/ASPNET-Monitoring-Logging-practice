        "Console": {
            "LogLevel": {
                "Default": "Information",
                "eCommerce": "Debug",
                "Microsoft.AspNetCore": "Warning"
            },
            "FormatterName": "simple",
            "FormatterOptions": {
                "SingleLine": true,
                "IncludeScopes": true,
                "TimestampFormat": "HH:mm:ss ",
                "UseUtcTimestamp": true,
                "JsonWriterOptions": {
                    "Indented": true
                }
            }
        }
