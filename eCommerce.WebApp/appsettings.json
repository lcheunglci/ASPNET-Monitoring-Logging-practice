{
    "ApplicationInsights": {
        "ConnectionString": "TODO: create an Application Insight from azure and grab the connection string there."
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.AspNetCore.HttpLogging": "Information",
            "eCommerce": "Debug"
        },

        "Console": {
            "FormatterName": "simple",
            "FormatterOptions": {
                "SingleLine": true,
                "IncludeScopes": true,
                "TimestampFormat": "HH:mm:ss ",
                "UseUtcTimestamp": true,
                "JsonWriterOptions": {
                    "Indented": true
                }
            }
        },
        "ApplicationInsights": {
            "LogLevel": {
                "Default": "Information",
                "Microsoft.AspNetCore": "Warning",
                "eCommerce": "Debug"
            }
        },
        "Debug": {
            "LogLevel": {
                "Default": "Critical"
            }
        }
    },
    "AllowedHosts": "*"
}
